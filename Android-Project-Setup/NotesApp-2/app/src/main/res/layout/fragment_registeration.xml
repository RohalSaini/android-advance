<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RegistrationFragment">
    <TextView
        android:id="@+id/registration_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registeration"
        android:layout_marginTop="@dimen/_20dp"
        android:textSize="@dimen/_20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginStart="@dimen/_40dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_40dp"
        android:hint="@string/username"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_5dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/registration_txt"/>

    <EditText
        android:id="@+id/password_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_40dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_5dp"
        android:paddingEnd="@dimen/_5dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/username_edt"/>

    <EditText
        android:id="@+id/emailAddress_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_40dp"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_5dp"
        android:paddingEnd="@dimen/_5dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/password_edt"/>
    <Button
        android:id="@+id/button_login"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginRight="@dimen/_40dp"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_20dp"
        android:padding="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress_edt"/>
</androidx.constraintlayout.widget.ConstraintLayout>